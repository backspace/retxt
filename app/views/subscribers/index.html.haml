.row
  %table
    %thead
      %tr
        %th #
        %th name
        %th admin?
        %th sent
        -@relays.each do |relay|
          %th[relay]
            .name=relay.name
            .number=relay.number
    %tbody
      -@subscribers.each do |subscriber|
        %tr[subscriber]
          %td=subscriber.number
          %td=subscriber.name_or_anon
          %td=subscriber.admin? ? check : cross
          %td.sent=subscriber.sent.count
          -@relays.each do |relay|
            -if relay.subscribed?(subscriber)
              -muted = relay.subscription_for(subscriber).muted
              %td{class: "relay_#{relay.id} subscriber_#{subscriber.id} #{muted ? 'muted' : ''}"}
                =check
                -if muted
                  (muted)
            -else
              %td
