%head
  %meta{ :charset => "utf-8" }

  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "retxt"

  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tags

%body{class: controller_name, id: action_name}
  .row.header
    .small-12.columns
      =image_tag 'tower.png', size: '100x100'
      %h1
        =link_to "retxt", '/'
      -if user_signed_in?
        -if current_user.admin
          =link_to "Subscribers", subscribers_url
          =link_to "Users", users_url
        =link_to "Sign out", destroy_user_session_path, method: :delete
      -else
        =link_to "Admin sign in", new_user_session_path
      %p.notice=notice
      %p.alert=alert

  = yield
  = javascript_include_tag "application"
