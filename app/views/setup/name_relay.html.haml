%section.row
  .small-12.columns
    %h2=t 'setup.heading'
    %p=t '.choose_a_name'
    =form_for @relay, url: wizard_path, method: :put do |f|
      =f.text_field :name
      %p
        -if @area_code
          =t '.phone_number_country_with_area_code', country: @country, area_code: @area_code
        -else
          =t '.phone_number_country', country: @country
        =t '.enter_number_if_exists'
      =f.text_field :number
      =f.submit t('setup.save_button')
